{
  "root": true,
  "extends": ["airbnb-base", "eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "HTMLElement": "readonly",
    "Element": "readonly"
  },
  "rules": {
    "prettier/prettier": "error",
    "camelcase": "error",
    "new-cap": "error",
    "no-underscore-dangle": "error",
    "prefer-const": "error",
    "eqeqeq": "error",
    "arrow-body-style": ["error", "as-needed"],
    "object-curly-spacing": ["error", "always"],

    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ]
  },
  "ignorePatterns": ["node_modules", "dist"]
}
